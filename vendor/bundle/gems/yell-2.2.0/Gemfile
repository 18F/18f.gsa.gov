source "http://rubygems.org"

# Specify your gem's dependencies in yell.gemspec
gemspec

group :development, :test do
  gem "rake"

  gem 'rspec-core', '~> 3'
  gem 'rspec-expectations'
  gem 'rspec-mocks'
  gem 'rspec-its'

  gem 'timecop'
  gem 'byebug', platform: :mri

  gem 'activesupport', '~> 5'

  gem 'simplecov', require: false
  gem 'coveralls', require: false
end

